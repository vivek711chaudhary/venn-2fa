{
    "name": "venn-custom-detection",
    "version": "1.0.0",
    "description": "Custom detector boilerplate",
    "scripts": {
        "dev": "NODE_ENV=development nodemon",
        "build": "rm -rf dist && NODE_ENV=production tsc && tsc-alias dist --outDir ./dist",
        "preview": "node dist/src/app.js",
        "test": "jest --silent=false",
        "test:watch": "jest --watch",
        "ts-check": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "gitHooks": {
        "pre-commit": "npm run ts-check && npm run lint && npm run test"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
        "ext": "ts, js"
    },
    "dependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.5",
        "ethers": "^6.13.2",
        "express": "^4.19.2",
        "undici-types": "^6.13.0",
        "uuid": "^10.0.0",
        "winston": "^3.14.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.2.0",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-typescript": "^0.14.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "prettier": "^2.8.8",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4",
        "yorkie": "^2.0.0"
    },
    "author": "",
    "license": "ISC"
}
